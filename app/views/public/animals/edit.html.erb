<div class='container'>
  <div class='row pt-5'>
    <% if @animal.errors.any? %>
    <%= @animal.errors.count %>件のエラーが発生しました
    <ul>
    <% @animal.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
  </div>
  
  <div class='row pt-5'>
    <div class="mx-auto col-lg-4">
      <h5 class="bg-dark text-light text-center">投稿内容編集</h5>
    </div>
  </div>
  
  <div class='row pt-4'>
    <div class="col-xl-8 ml-auto">
    <%= form_with model:[@animal], local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label "画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>
      
      <tr>
        <th><%= f.label "種類" %></th>
        <td><%= f.text_field :animal_type, autocomplete: "animal_type" %></td>
      </tr>
      
      <tr>
        <th><%= f.label "性別" %></th>
        <td><%= f.text_field :gender, autocomplete: "gender" %></td>
      </tr>
      
      <tr>
        <th><%= f.label "年齢" %></th>
        <td><%= f.text_field :age, autocomplete: "age" %></td>
      </tr>
      
      <tr>
        <th><%= f.label "都道府県" %></th>
        <td>
          <%= f.select :prefecture, [["北海道", "北海道"], ["青森県", "青森県"], ["岩手県", "岩手県"], ["宮城県", "宮城県"], ["秋田県", "秋田県"], ["山形県", "山形県"], ["福島県", "福島県"], 
          ["茨城県", "茨城県"], ["栃木県", "栃木県"], ["群馬県", "群馬県"], ["埼玉県", "埼玉県"], ["千葉県", "千葉県"], ["東京都", "東京都"], ["神奈川県", "神奈川県"], ["新潟県", "新潟県"], 
          ["富山県", "富山県"], ["石川県", "石川県"], ["福井県", "福井県"], ["山梨県", "山梨県"], ["長野県", "長野県"], ["岐阜県", "岐阜県"], ["静岡県", "静岡県"], ["愛知県", "愛知県"], 
          ["三重県", "三重県"], ["滋賀県", "滋賀県"], ["京都府", "京都府"], ["大阪府", "大阪府"], ["兵庫県", "兵庫県"], ["奈良県", "奈良県"], ["和歌山県", "和歌山県"], ["鳥取県", "鳥取県"], 
          ["島根県", "島根県"], ["岡山県", "岡山県"], ["広島県", "広島県"], ["山口県", "山口県"], ["徳島県", "徳島県"], ["香川県", "香川県"], ["愛媛県", "愛媛県"], ["高知県", "高知県"], 
          ["福岡県", "福岡県"], ["佐賀県", "佐賀県"], ["長崎県", "長崎県"], ["熊本県", "熊本県"], ["大分県", "大分県"], ["宮崎県", "宮崎県"], ["鹿児島県", "鹿児島県"], ["沖縄県", "沖縄県"]], include_blank: "選択して下さい" %></td>
        </td>
      </tr>
      
      <tr>
        <th><%= f.label "紹介文" %></th>
        <td><%= f.text_field :introduction, autocomplete: "introduction" %></td>
      </tr>
    </table>
    </div>
  </div>

  <div class="row pt-3">
    <div class="col-xl-7 ml-auto">
      <%= f.submit "変更を保存",class: 'btn btn-success ml-5' %>
    </div>
  </div>
    <% end %>
</div>