<div class="container mt-5">
  <div class="row">
    <div class="col-md-10">
      <h3><strong>投稿一覧</strong>(全<%= @animals.count %>件)</h3>

      <div class="row">
        <% @animals.each do |animal| %>
      <div class="col-md-3">
        <%= link_to animal_path(animal.id) do %>
        <%= image_tag animal.get_image(200,200) %>
        <p>種類 : <%= animal.animal_type %></p>
        <p>性別 : <%= animal.gender %></p>
        <p>年齢 : <%= animal.age %>歳</p>
        <p>譲渡場所 : <%= animal.prefecture %></p>
        <p>紹介文 : <%= animal.introduction %></p>
        <% end %>
      </div>
        <% end %>
      </div>
        <div class="row">
          <div class="col-12 d-flex justify-content-center">
            <%#= paginate @animals %>
          </div>
        </div>  
    </div>
  </div>
</div>
