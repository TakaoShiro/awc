<div class="container">
  <div class="row pt-5">
    <div class="col-12">
      <div class="left-button">
      <%= link_to "ユーザー一覧に戻る", customers_path, class:"edit-link" %>
      </div>
    </div>
  </div>

  <div class="row pt-5">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
    <div class="col-3">
      <p><%= image_tag m.customer.get_image(200,300) %></p>
    </div>
    <div class="col-2">
      <p><strong><%= m.customer.name %></strong></p>
    </div>
    <div class="col-3">
      <p><%= m.direct_message %></p>
    </div>
    <div class="col-2">
      <p><%= m.created_at.strftime("%Y-%m-%d %H:%M")%></p>
    </div>
    <div class="col-2">
      <% if m.customer == current_customer %>
      <%= link_to "削除する", message_path(m.id), method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
      <% end %>
      <% end %>
  </div>
        
    <%= @message.direct_message %>
    <div class="posts pt-4 pb-3">
      <%= form_with model: @message do |f| %>
        <%= f.text_field :direct_message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "投稿",class: 'form-submit'%>
      <% end %>
    </div>
</div>