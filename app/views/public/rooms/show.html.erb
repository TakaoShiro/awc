<div class="left-button">
  <%= link_to "ユーザー一覧に戻る", customers_path, class:"edit-link" %>
</div>

<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= image_tag m.customer.image, class:"user-image" %>
          </div>
          <div class="chat-hukidashi"> <strong><%= m.direct_message %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= @message.direct_message %>
  <div class="posts">
  <%= form_with model: @message do |f| %>
    <%= f.text_field :direct_message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit "投稿",class: 'form-submit'%>
  <% end %>
</div>
</div>